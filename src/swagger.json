{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Quake Log Parser ApiRest",
    "description": "ApiRest to view Quake 3 Arena games",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [{
      "url": "/",
      "description": "Local Dev, or from Heroku"
    }
  ],
  "tags": [{
    "name": "Games",
    "description": "ApiRest to view Quake 3 Arena games"
  }],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/games": {
      "get": {
        "tags": [
          "Games"
        ],
        "summary": "Get all games in Quake Log",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Games"
                }
              }
            }
          },
          "400": {
            "description": "Failed. Game not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Error while reading file!",
                  "status": 400
                }
              }
            }
          },
          "500": {
            "description": "Failed. Game not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Internal Server Error!",
                  "status": 500
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Adding and analyzing new games",
        "description": "Adding and analyzing new games",
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Failed. Bad post data!",
                  "status": 400
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Internal Server Error!",
                  "status": 500
                }
              }
            }
          }
        }
      }
    },
    "/games/{id}": {
      "parameters": [{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID of the game that we want to find",
        "type": "string"
      }],
      "get": {
        "tags": [
          "Games"
        ],
        "summary": "Get game with given ID",
        "parameters": [{
          "in": "path",
          "name": "id",
          "required": true,
          "description": "Game with id",
          "schema": {
            "$ref": "#/definitions/id"
          }
        }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Game"
                }
              }
            }
          },
          "400": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Failed. Game not found!",
                  "status": 400
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Error"
                },
                "example": {
                  "message": "Internal Server Error!",
                  "status": 500
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "id": {
      "properties": {
        "uuid": {
          "type": "string"
        }
      }
    },
    "Game": {
      "type": "object",
      "properties": {
        "total_kills": {
          "type": "number"
        },
        "players": {
          "type": "string"
        },
        "kills": {
          "type": "object",
          "properties": {
            "player": {
              "type": "number"
            }
          }
        }
      }
    },
    "Games": {
      "type": "object",
      "properties": {
        "games": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/Game"
          }
        }
      }
    }, 
    "Error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "status": {
          "type": "number"
        }
      }
    }
  }
}
